<div class="bg-white rounded-2xl p-5 pt-8 lg:p-12 shadow-lg border border-gray-200">
  <form id="contactForm" class="flex flex-col gap-6">
    <div>
      <label for="nombre" class="sr-only">Nombre completo *</label>
      <input 
        type="text" 
        id="nombre" 
        name="nombre" 
        required 
        placeholder="Nombre completo *"
        class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl bg-white text-gray-800 text-base transition-all duration-300 focus:outline-none focus:border-red-500 focus:bg-white focus:-translate-y-0.5 focus:shadow-lg"
      />
    </div>
    
    <div>
      <label for="telefono" class="sr-only">Teléfono *</label>
      <input 
        type="tel" 
        id="telefono" 
        name="telefono" 
        required 
        placeholder="Teléfono *"
        class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl bg-white text-gray-800 text-base transition-all duration-300 focus:outline-none focus:border-red-500 focus:bg-white focus:-translate-y-0.5 focus:shadow-lg"
      />
    </div>
    
    <div>
      <label for="email" class="sr-only">Email *</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        required 
        placeholder="Email *"
        class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl bg-white text-gray-800 text-base transition-all duration-300 focus:outline-none focus:border-red-500 focus:bg-white focus:-translate-y-0.5 focus:shadow-lg"
      />
    </div>
    
    <div>
      <label for="mensaje" class="sr-only">Mensaje</label>
      <textarea 
        id="mensaje" 
        name="mensaje" 
        rows="5" 
        placeholder="Mensaje"
        class="w-full px-5 py-4 border-2 border-gray-200 rounded-xl bg-white text-gray-800 text-base transition-all duration-300 focus:outline-none focus:border-red-500 focus:bg-white focus:-translate-y-0.5 focus:shadow-lg resize-y min-h-32"
      ></textarea>
    </div>

    <button type="submit" class="bg-gradient-to-r from-red-600 to-red-800 text-white border-none py-5 px-8 rounded-xl text-lg font-semibold cursor-pointer transition-all duration-300 flex items-center justify-center gap-3 mt-3 hover:-translate-y-1 hover:shadow-xl active:-translate-y-0.5">
      <span>Enviar</span>
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M22 2L11 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M22 2L15 22L11 13L2 9L22 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
  </form>
  <div id="form-message" class="mt-4 text-center font-medium"></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const messageContainer = document.getElementById('form-message');
    
    if (form && messageContainer) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        messageContainer.textContent = '';
        messageContainer.className = 'mt-4 text-center font-medium';

        const formData = new FormData(form);
        const nombre = formData.get('nombre') as string;
        const telefono = formData.get('telefono') as string;
        const email = formData.get('email') as string;
        const mensaje = formData.get('mensaje') as string;
       
        console.log('Datos del formulario:', {
          nombre,
          telefono,
          email,
          mensaje
        });
        
        messageContainer.textContent = '¡Gracias por tu mensaje! Nos pondremos en contacto contigo pronto.';
        messageContainer.classList.add('text-red-600');
        
        form.reset();
      });
    }
  });
</script> 